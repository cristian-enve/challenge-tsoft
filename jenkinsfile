pipeline{
    agent any
    tools{
        maven 'Maven'
    }
    stages{       
        stage('Hello'){
            steps{
                echo 'Hello World!'
            }
        }

        stage('World'){
            steps{
                echo 'World Hello!!!!!'
            }
        }

        stage('Load & Print'){
            steps{
                script{
                    def dummy = readFile (file: 'dummy.txt')
                    println(dummy)
                }
            }
        }

        stage('Upload to Nexus'){
            steps{
                nexusPublisher nexusInstanceId: 'nexus3', 
                nexusRepositoryId: 'challenge-tsoft', 
                packages: []
            }
        }
    }
}